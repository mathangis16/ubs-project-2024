{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    // "types": ["node"],                        //added this to fix error of require when using fs to read the json file
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,    //added this to fix the error of not reading the import statements

    /* Bundler mode */
    "moduleResolution": "node",       //using node instead of bundler
    //"allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
